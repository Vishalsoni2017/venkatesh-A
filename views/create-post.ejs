<%- include("includes/header") %>
    <!--body start here-->
    <div class="container py-md-5 container--narrow">
        <form action="/create-post" method="post">
            <div class="form-group">
                <label for="post-title" class="text-muted mb-1"><small>Title</small></label>
                <input type="text" class="form-control form-control-lg form-control-title" name="title" id="post-title"  autocomplete="off">
            </div>
            <div class="form-group">
                <label for="post-body" class="text-muted mb-1"><small>Developer Content</small></label>
                <textarea required class="form-control body-content tall-textarea" name="body" id="post-body"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Publish Post</button>
            </div>
        </form>

    </div>
    
 <%- include("includes/footer") %>